<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.reffics.groupware.svc.login.mapper.BoardMapper">


	<insert id="insertBoard"
		parameterType="com.reffics.groupware.svc.login.model.BoardDto">
		INSERT INTO noti_list
		VALUES (
		#{notiSeq},
		'0',  <!-- 상태코드 -->
		'0',  <!-- 정렬 순번 -->
		#{title},
		#{bdy},
		#{staDate},
		#{endDate},
		#{actFileNm1},
		'0',  <!-- 저장 첨부파일명1 -->
		#{actFileNm2},
		'0',  <!-- 저장 첨부파일명2 -->
		#{actFileNm3},
		'0', <!-- 저장 첨부파일명3 -->
		'admin', <!-- 등록자 id -->
		'admin', <!-- 생성 id -->
		'0', <!-- 생성일시 -->
		'admin', <!-- 수정id -->
		'0' <!-- 수정일시 -->
		)

	</insert>


	<select id="selectNow"
		resultType="com.reffics.groupware.svc.login.model.BoardDto">
		select* from noti_list nl

	</select>


	<insert id="insertComment"
		parameterType="com.reffics.groupware.svc.login.model.ComentDto">
		insert into noti_board_list
		VALUES(
		#{notiSeq},
		#{boardSeq},
		#{boardMsg},
		'User',  <!-- 등록자 id -->
		#{createId},
		#{createDt},
		'User',  <!-- 수정 id -->
		'a'      <!-- 수정 일시 -->
		)
	</insert>



	<select id="selectComment"
		resultType="com.reffics.groupware.svc.login.model.ComentDto"
		parameterType="string">
		select* from noti_board_list where noti_seq = #{seq}

	</select>


	<delete id="deleteBoard" parameterType="string">
		delete from noti_list
		where noti_seq = #{seq}

	</delete>



	<select id="boardSearch"
		resultType="com.reffics.groupware.svc.login.model.BoardDto"
		parameterType="string">
		select * from noti_list where title like '%'||#{title}||'%'



	</select>

	<delete id="deleteComment" parameterType="string">
		delete from
		noti_board_list where board_seq = #{seq}
	</delete>


	<update id="updateBoard"
		parameterType="com.reffics.groupware.svc.login.model.BoardDto">

		update noti_list set 
		title = #{title}, 
		bdy = #{bdy},
		sta_date = #{staDate},
		end_date = #{endDate}
		where noti_seq = #{notiSeq}

	</update>






</mapper>







